@using OdeToFood.Core
@model Restaurant
@{
    ViewData["Title"] = "Restaurants";
}


<div class=""></div>
<div>
    <h3>@Model.Name</h3>
</div>
<div>
    <span>Location:@Model.Location</span>
    <span>Cuisine:@Model.Cuisine</span>
</div>
<div>
    <a class="btn btn-dark"
       asp-page="./Detail"
       asp-route-restaurantID="@Model.ID">
        <i class="glyphicon glyphicon-zoom">Show details</i>
    </a>
    <a class="btn btn-dark"
       asp-page="./Edit"
       asp-route-restaurantID="@Model.ID">
        <i class="glyphicon glyphicon-edit">Edit information</i>
    </a>
    <a class="btn btn-dark"
       asp-page="./Delete"
       asp-route-restaurantID="@Model.ID">
        <i class="glyphicon glyphicon-delete">Delete information</i>
    </a>
</div>
